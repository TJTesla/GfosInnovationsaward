<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                                  http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
  
    <navigation-rule>
        <from-view-id>../03-applicationList/applicationsEmpl.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>applicationDetail</from-outcome>
            <to-view-id>../03-application/applDetailEmpl.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>../02-offer/offer.xhtml</from-view-id>

        <navigation-case>
            <from-outcome>seeApplications</from-outcome>
            <to-view-id>../03-applicationList/applicationsEmpl.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-outcome>apply</from-outcome>
            <to-view-id>../03-application/application.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-outcome>seeAppl</from-outcome>
            <to-view-id>../03-application/applDetailUser.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>../03-applicationList/applicationsUser.xhtml</from-view-id>

        <navigation-case>
            <from-outcome>seeAppl</from-outcome>
            <to-view-id>../03-application/applDetailUser.xhtml</to-view-id>
            <redirect />
        </navigation-case>
    </navigation-rule>

</faces-config>